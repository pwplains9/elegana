extends @pug/base

append globals
    - pageName = 'home'
    - title = data[pageName]?.meta?.title ?? data.general.title
    - description = data[pageName]?.meta?.description ?? data.general.description
    - image = data[pageName]?.meta?.image ?? data.general.image

append vars
    - meta.keywords = data[pageName]?.meta?.keywords ?? data.general.keywords

    each linkValue, linkKey in data.general.link
        - link[linkKey] = linkValue

    each metaValue, metaKey in data.general.meta
        - meta[metaKey] = metaValue

block content
    .popup-form.is-hidden(data-item="contacts-form")
        .popup-form-bg
        .popup-form-content.is-hidden
            .form

                .title-md.title-white
                    | Оставьте свои#[br] контакты,#[br]
                    | и мы вам#[br] перезвоним
                    .popup-form-close
                        <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.5808 10.1823L2.39851 0L0 2.39851L10.1823 12.5808L0 22.7632L2.39851 25.1617L12.5808 14.9794L22.7632 25.1617L25.1617 22.7632L14.9794 12.5808L25.1617 2.39851L22.7632 1.3487e-06L12.5808 10.1823Z" fill="white"/>
                        </svg>
                .form-input
                    input(placeholder="Имя и фамилия")
                .form-container
                    .form-input
                        input(placeholder="Номер телефона")
                    .form-input
                        input(placeholder="E-mail")
                .form-textarea
                    textarea(placeholder="Какой проект вы хотите обсудить?")
                button.form-button(type="submit") отправить
                .form-text
                    | Нажимая кнопку «Отправить», вы соглашаетесь с #[a(href="") политикой конфиденциальности]
                .form-success.is-hidden
                    .form-success-svg
                        <svg width="146" height="146" viewBox="0 0 146 146" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M145.5 73C145.5 113.041 113.041 145.5 73 145.5C32.9594 145.5 0.5 113.041 0.5 73C0.5 32.9594 32.9594 0.5 73 0.5C113.041 0.5 145.5 32.9594 145.5 73Z" fill="transparent" stroke="white"/>
